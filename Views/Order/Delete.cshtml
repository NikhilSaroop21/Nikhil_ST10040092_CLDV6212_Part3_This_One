@model Nikhil_ST10040092_CLDV6212_Part3.Models.Order
<link rel="stylesheet" href="~/css/Order_Create.css" asp-append-version="true" / >

<h2>Delete this Order</h2>


<div>
    <h4>Order ID: @Model.OrderId</h4>
    <dl class="row">
        <dt class="col-sm-2">Name Of Customer</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Name Of Product</dt>
        <dd class="col-sm-10">@Model.Product?.Product_Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Order_Address</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="OrderId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
