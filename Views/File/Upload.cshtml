@model Nikhil_ST10040092_CLDV6212_Part3.Models.FileModel

@{
    ViewData["Title"] = "Upload File";
}

<h2>Upload File</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="UploadedFile" class="control-label"></label>
        <input asp-for="UploadedFile" type="file" class="form-control" />
        <span asp-validation-for="UploadedFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<div>
    <a asp-action="Index">Back to File List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
