@model IEnumerable<Nikhil_ST10040092_CLDV6212_Part3.Models.Product>
<link rel="stylesheet" href="~/css/Manage_Product.css" asp-append-version="true" />

@{
    ViewData["Title"] = "List Of Products";
}

<h2 class="text-center my-4">Product List</h2>

<div class="row justify-content-center">
    @foreach (var product in Model)

    {
        <div class="col-md-4 col-lg-3 mb-4">
            <div class="card shadow-sm border-0">
                @if (!string.IsNullOrEmpty(product.ImageUrl))

                {
                    <img src="@product.ImageUrl" class="card-img-top" alt="Product Image" style="height: 200px; object-fit: cover; border-radius: 5px 5px 0 0;">
                }
                <div class="card-body text-center">
                    <h5 class="card-title font-weight-bold">@product.Product_Name</h5>
                    <p class="card-text text-muted">@product.Description</p>
                    <p class="card-text text-primary"><strong>Price:</strong> $@product.Product_Price</p>
                    <p class="card-text"><strong>Quantity:</strong> @product.Quantity</p>
                </div>
                <div class="card-footer bg-transparent text-center">
                    <a href="Order/Create" class="btn btn-outline-primary btn-sm">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Center the title and add margin */
    h2 {
        font-size: 2em;
        color: #333;
        font-weight: bold;
    }

    /* Add shadow and rounded corners to the cards */
    .card {
        border-radius: 10px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background-color: #f9f9f9;
    }

        /* Scale effect on hover */
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

    /* Card titles and text adjustments */
    .card-title {
        font-size: 1.2em;
        color: #333;
    }

    .card-text {
        font-size: 0.9em;
    }

    /* Adjust button styles */
    .btn-outline-primary {
        color: #007bff;
        border-color: #007bff;
    }

        .btn-outline-primary:hover {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
        }

    /* General spacing and layout adjustments */
    .container {
        padding-top: 20px;
    }
</style>
